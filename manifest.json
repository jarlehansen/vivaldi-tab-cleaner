{
  "manifest_version": 3,
  "name": "Vivaldi Tab Cleaner",
  "version": "1.0",
  "description": "Automatically closes tabs that were opened yesterday, while preserving pinned and stacked tabs.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}